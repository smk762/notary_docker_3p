version: '3.7'

x-zcash-params-volume:
  &zcash-params
  type: bind
  read_only: true
  source: /home/USERNAME/.zcash-params
  target: /home/komodian/.zcash-params

services:
  aya:
    env_file:
      - .env
    build:
      context: ./docker_files
      dockerfile: Dockerfile.AYA
      args:
        - COMMIT_HASH=d40b0d7
        - USER_ID=$USER_ID
        - GROUP_ID=$GROUP_ID
        - SERVICE_CLI="aryacoin-cli"
    ports:
      - "127.0.0.1:26001:26001"
      - "127.0.0.1:9432:9432"
    container_name: aya
    volumes:
      - /home/USERNAME/.aryacoin:/home/komodian/.aryacoin
    restart: always
    stop_grace_period: 10s
    logging:
      driver: "json-file"
      options:
        max-size: "20m"
        max-file: "10"
    command: ["/run.sh"]

  chips:
    env_file:
      - .env
    build:
      context: ./docker_files
      dockerfile: Dockerfile.CHIPS
      args:
        - USER_ID=$USER_ID
        - GROUP_ID=$GROUP_ID
        - COMMIT_HASH=f0dfd82
        - SERVICE_CLI="chips-cli"
    ports:
      - "127.0.0.1:57777:57777"
      - "127.0.0.1:57776:57776"
    container_name: chips
    volumes:
      - /home/USERNAME/.chips:/home/komodian/.chips
      - <<: *zcash-params
    stop_grace_period: 10s
    restart: always
    logging:
      driver: "json-file"
      options:
        max-size: "20m"
        max-file: "10"
    command: ["/run.sh"]

  emc2:
